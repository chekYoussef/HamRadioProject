<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="382.0" prefWidth="377.0" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.ui.MessageInputController">
    <children>
        <Label text="Enter your message:" />
        <TextField fx:id="messageInput" promptText="Type a word or phrase" />
        <Label text="Save message at Set frequency (in Mhz):" />
        <TextField fx:id="frequencyInput" promptText="Frequency" />
      <Label alignment="CENTER" prefHeight="17.0" prefWidth="187.0" text="Enter Character Speed (in WPM):" />
      <TextField fx:id="speedInput" promptText="Character Speed" />
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="199.0" text="Enter Frequency (in Hz):" textAlignment="CENTER" />
      <TextField fx:id="toneInput" promptText="Tone Frequency" />
        <Button onAction="#saveMessage" text="Save Message" />
    </children>
</VBox>
